import unicodedata
from fractions import Fraction

string = "Â¼ cup dried unsweetened coconut"

# Normalize the string
normalized_string = unicodedata.normalize('NFKC', string)

# print(normalized_string)

# clean_string = ''.join(char for char in normalized_string if char.isdigit() or char.isspace() or char in ['¼', '½', '¾'])

# # Convert the cleaned string to a decimal using the fractions module
# decimal = sum(Fraction(s) for s in clean_string.split())

# print(decimal)
# Define a dictionary mapping fraction characters to their corresponding decimal values
fraction_dict = {'¼': Fraction(1, 4), '½': Fraction(1, 2), '¾': Fraction(3, 4)}

# Remove any non-digit, non-space, and non-fraction characters
clean_string = ''.join(char for char in normalized_string if char.isdigit() or char.isspace() or char in fraction_dict.keys())

# Convert the cleaned string to a decimal using the fractions module
decimal = sum(fraction_dict.get(s, Fraction(0)) for s in clean_string.split())

print(decimal)